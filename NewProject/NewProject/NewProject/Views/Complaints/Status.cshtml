@model IEnumerable<Garbage.Common.DTO.ComplaintDTO>

@{
    ViewBag.Title = "Status";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="card-header">
    <strong class="card-title">Status Table</strong>
</div>
<div class="card-body">

</div><div class="row">
    <div class="col-sm-12">
        <table id="bootstrap-data-table" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="bootstrap-data-table_info">
            <thead>
                <tr style="background-color:#d39e00">
                    <th>
                        Username
                    </th>
                    <th>
                        Address
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.garbage.add_Garbage.G_Type)
                        </th>*@
                    @* <th>
                            @Html.DisplayNameFor(model => model.Created_by)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Created_time)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.updated_by)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.updated_time)
                        </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Mobile_Number)
                                    </th>*@
                    <th>
                        Entry Date
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Accepted Date
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {


                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName) @*show user namenot id*@
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.garbage.add_Garbage.G_Type)
                             </td>*@

                        <td>
                            @Html.DisplayFor(modelItem => item.Entrydate)
                        </td>

                        <td class="@item.Status">


                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Completiondate)
                        </td>
                        @* <td>
                                @Html.DisplayFor(modelItem => item.Created_by)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created_time)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.updated_by)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.updated_time)
                            </td>*@
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Mobile_Number)
                            </td>*@

                    </tr>
                }
            <tbody>

        </table>
    </div>
</div>


<style>
    .Approved {
        color: forestgreen;
    }

    .pending {
        color: deeppink;
    }

    .Pending {
        color: deeppink;
    }

    .Rejected {
        color: red;
    }

    .btn-xs {
        border: 1px solid;
        border-radius: 10px;
    }
</style>
