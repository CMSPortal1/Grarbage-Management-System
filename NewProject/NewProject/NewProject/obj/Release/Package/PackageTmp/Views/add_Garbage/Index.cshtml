@model IEnumerable<Garbage.Common.DTO.GarbageTypeInfoDTO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card-header">
    <strong class="card-title">Garbage Types</strong>
</div>
<div class="card-body">

</div><div class="row">
    <div class="col-sm-12">
        <table id="bootstrap-data-table" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="bootstrap-data-table_info">
            <thead>
                <tr style="background-color:#d39e00">

                    <th>
                        Type
                    </th>
                    <th>
                       Created by
                    </th>
                    
                    <th>
                       Created Time
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.G_Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Updated_by)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Created_on)
                    </td>
                    
                    <td class="text-center">
                        <a class='btn btn-info btn-xs' href="@Url.Action("Edit","Complaints",new { id = item.G_id })new { id = item.Dumping_id })"><i class="fa fa-edit"></i><span class="glyphicon glyphicon-edit"></span> Edit</a>
                        <a class="btn btn-danger btn-xs" href="@Url.Action("Delete","Complaints",new { id = item.G_id })"><i class="ti-close"></i><span class="glyphicon glyphicon-remove"></span> Del</a>
                  
                    </td>
                </tr>
                }


            </tbody>
        </table>
    </div>
</div>
<style>
    .btn-xs {
        border: 1px solid;
        border-radius: 10px;
    }
</style>
